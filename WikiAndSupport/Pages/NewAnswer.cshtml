@page
@model WikiAndSupport.Pages.NewAnswerModel

@if (Model.ModelState.ErrorCount > 0)
{
<div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    @Model.Message
</div>
}
<div class="row">

    <div class="col-md-12">
        <form method="post" id="answerform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                @{ var t = Model.Issue.Title; } 评论: @t
                <input asp-for="Answer.Text" class="form-control" />
                <input asp-for="IssueID" hidden />
                <span asp-validation-for="Answer.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="ascommit" value="提交评论" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div><a class="btn btn-default active" onclick="javascript:history.back()">返回</a></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
