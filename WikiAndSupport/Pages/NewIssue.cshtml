@page
@model WikiAndSupport.Pages.NewIssueModel

@{
    ViewData["Title"] = "提交一个新的问题";
}
@if (Model.ModelState.ErrorCount > 0)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Issue.Title" class="control-label"></label>
                <input asp-for="Issue.Title" class="form-control" />
                <span asp-validation-for="Issue.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Content" class="control-label"></label>
                <input asp-for="Issue.Content" class="form-control" id="Issue_Content" />
                <span asp-validation-for="Issue.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="Issue_Submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">返回首页</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
